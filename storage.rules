rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // DJ profile pictures
    // Path: dj-photos/{userId}/profile.{ext}
    match /dj-photos/{userId}/{fileName} {
      // Only authenticated users can read any DJ photo
      allow read: if request.auth != null;

      // Users can only write to their own folder
      allow write: if request.auth != null
        && request.auth.uid == userId
        // File size limit: 5MB
        && request.resource.size < 5 * 1024 * 1024
        // Only allow images
        && request.resource.contentType.matches('image/(jpeg|png|gif|webp)');

      // Allow delete for own photos
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
