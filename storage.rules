rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /dj-photos/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/(jpeg|png|gif|webp)');
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    match /show-images/{slotId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/(jpeg|png|gif|webp)');
      allow delete: if request.auth != null;
    }

    match /pending-dj-photos/{profileId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/(jpeg|png|gif|webp)');
      allow delete: if request.auth != null;
    }

    match /event-photos/{eventId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/(jpeg|png|gif|webp)');
      allow delete: if request.auth != null;
    }

    match /venue-photos/{venueId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/(jpeg|png|gif|webp)');
      allow delete: if request.auth != null;
    }
  }
}
