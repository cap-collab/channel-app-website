# Firebase Configuration
# Create a Web App in Firebase Console > Project Settings > Your Apps
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=channel-97386
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# Firebase Admin SDK
# Download from Firebase Console > Project Settings > Service Accounts > Generate new private key
# For FIREBASE_ADMIN_PRIVATE_KEY, copy the "private_key" value (including \n characters)
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@channel-97386.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# App URL (used in emails and OAuth redirects)
NEXT_PUBLIC_APP_URL=https://channel-app.com

# Google OAuth (for Calendar API)
# Create at https://console.cloud.google.com/apis/credentials
# Add authorized redirect URI: https://channel-app.com/api/auth/google/callback
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=

# Email (Resend)
# Get from https://resend.com/api-keys
# Add and verify domain: channel-app.com
RESEND_API_KEY=re_xxxxxxxxxx

# Cron Security
# Generate with: openssl rand -hex 32
CRON_SECRET=

# Encryption (for Google Calendar tokens)
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=

# LiveKit (for broadcast streaming)
# Get from https://cloud.livekit.io - Project Settings
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=
LIVEKIT_API_SECRET=

# Stripe (for tips/payments)
# Get from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
# Get from https://dashboard.stripe.com/webhooks (after creating endpoint)
STRIPE_WEBHOOK_SECRET=whsec_xxx
