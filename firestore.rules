rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is a broadcaster or admin
    function isBroadcaster() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['broadcaster', 'admin'];
    }

    // Chat messages (mobile app) - requires auth
    match /chats/{stationId}/messages/{messageId} {
      // Allow public read/write for broadcast chat (DJs don't need to log in)
      allow read, write: if stationId == 'broadcast';

      // Other station chats require authentication
      allow read: if stationId != 'broadcast' && request.auth != null;
      allow create: if stationId != 'broadcast' && request.auth != null
        && request.resource.data.message is string
        && request.resource.data.message.size() <= 280
        && request.resource.data.username is string
        && request.resource.data.username.size() <= 20;
      allow update: if stationId != 'broadcast' && request.auth != null
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['heartCount', 'timestamp']);
      allow delete: if false;
    }

    // Username registration (mobile app)
    match /usernames/{username} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
        && request.resource.data.displayName is string
        && request.resource.data.displayName.size() <= 20;
      allow delete: if request.auth != null && resource.data.uid == request.auth.uid;
      // Allow updates only for claiming reserved usernames (server-side via admin SDK)
      allow update: if false;
    }

    // @Channel mentions log (mobile app)
    match /channel-mentions/{mentionId} {
      allow read: if false;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }

    // Pending popularity emails (for account deletion)
    match /pendingPopularityEmails/{docId} {
      allow read, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create, update: if false;
    }

    // Pending mention emails (for account deletion)
    match /pendingMentionEmails/{docId} {
      allow read, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create, update: if false;
    }

    // User profiles and favorites (web app + cron)
    match /users/{userId} {
      // Users can read/write their own document
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow public read for DJ profiles (needed for /dj/[username] pages)
      allow read: if resource.data.role in ['dj', 'broadcaster', 'admin'];
      // Cron job access
      allow read: if request.auth != null && request.auth.token.email == 'cron@channel-app.com';
      allow update: if request.auth != null && request.auth.token.email == 'cron@channel-app.com';

      match /favorites/{favoriteId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        allow read, write: if request.auth != null && request.auth.token.email == 'cron@channel-app.com';
      }
    }

    // Broadcast slots
    // - Anyone can read (DJs validate their token without login)
    // - Only broadcasters can write (create/update/delete slots)
    match /broadcast-slots/{slotId} {
      allow read: if true;
      allow write: if isBroadcaster();
    }

    // DJ applications (web app)
    // - Anyone can create (public application form)
    // - Only broadcasters/admins can read and update
    match /dj-applications/{docId} {
      allow create: if true;
      allow read, update: if isBroadcaster();
      allow delete: if false;
    }

    // Pending DJ profiles (for pre-registered DJs who haven't signed up yet)
    // - Anyone can read (needed for DJ profile pages)
    // - Only broadcasters/admins can write
    match /pending-dj-profiles/{profileId} {
      allow read: if true;
      allow write: if isBroadcaster();
    }

    // Scheduled notifications (cron job)
    match /scheduledNotifications/{notificationId} {
      allow read, write: if request.auth != null && request.auth.token.email == 'cron@channel-app.com';
    }

    // Tips - anyone can read tips (needed for DJ dashboard to show tip totals)
    // Tips are created only by the server via Stripe webhook
    match /tips/{tipId} {
      allow read: if true;
      allow create, update, delete: if false;
    }

    // Station applications (web app)
    match /station-applications/{docId} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    // Beta waitlist - Android email capture (web app)
    match /beta-waitlist/{docId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
  }
}
